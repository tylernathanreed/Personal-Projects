            <string>//* Mouse Control *//
// Reset Mouse
if(!hand &amp;&amp; window_get_cursor() == cr_none &amp;&amp; !obj_button_shift.arrow)
{
    window_set_cursor(cr_default);
    cursor_sprite = -1;
}

// Disable Hand
if(window_mouse_get_y() &lt; global.controller.border || mouse_check_button(mb_right))
    if(mouse_check_button_pressed(mb_any))
        hand = false;
    else
        exit; // No dragging above the Border

// Start Moving the View
if(hand &amp;&amp; mouse_check_button_pressed(mb_left))
{
    cursor_sprite = spr_mouse_grab;
    mx = window_mouse_get_x();
    my = window_mouse_get_y();
    vx = view_xview;
    vy = view_yview;
}
else if(hand &amp;&amp; mouse_check_button(mb_left))
{
    var xx, yy;

    // Move View
    xx = vx + mx - window_mouse_get_x();
    yy = vy + my - window_mouse_get_y();

    // Restrict X View
    if(xx &lt; 0)
        xx = 0;
    else if(xx + view_wview &gt; room_width)
        xx = room_width - view_wview;

    // Restrict Y View
    if(yy &lt; 0)
        yy = 0;
    else if(yy + view_hview &gt; room_height)
        yy = room_height - view_hview;

    view_xview = xx;
    view_yview = yy;
}
else if(hand &amp;&amp; mouse_check_button_released(mb_left))
    cursor_sprite = spr_mouse_hand;
</string>
